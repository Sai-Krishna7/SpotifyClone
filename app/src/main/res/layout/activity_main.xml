<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/spotify_black_dark">

    <TextView
        android:id="@+id/LogInTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log in to continue."
        android:background="@color/spotify_black_dark"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textAlignment="center"
        app:layout_constraintVertical_bias="0.125" />

    <EditText
        android:id="@+id/TextBoxEmail"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@color/spotify_black_light"
        android:textColor="@color/white"
        android:textColorHint="@color/spotify_gray_light"
        app:layout_constraintTop_toBottomOf="@id/LogInTextView"
        app:layout_constraintLeft_toLeftOf="@id/LogInTextView"
        app:layout_constraintRight_toRightOf="@id/LogInTextView"
        android:hint="Email or username"/>

    <EditText
        android:id="@+id/TextBoxPassword"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@color/spotify_black_light"
        android:textColor="@color/white"
        android:textColorHint="@color/spotify_gray_light"
        app:layout_constraintTop_toBottomOf="@id/TextBoxEmail"
        app:layout_constraintLeft_toLeftOf="@id/TextBoxEmail"
        app:layout_constraintRight_toRightOf="@id/TextBoxEmail"
        android:hint="Password"
        android:inputType="textPassword"/>
    <Button
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:id="@+id/LogInButton"
        android:text="LOG IN"
        app:layout_constraintTop_toBottomOf="@id/TextBoxPassword"
        app:layout_constraintLeft_toLeftOf="@id/TextBoxPassword"
        app:layout_constraintRight_toRightOf="@id/TextBoxPassword"
        android:layout_margin="20dp"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toTopOf="@id/LogInTextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/spotify_logo"
        android:layout_margin="25dp"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="16dp" />


</androidx.constraintlayout.widget.ConstraintLayout>